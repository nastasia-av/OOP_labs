<Window x:Class="MusicCatalog.Windows.AddArtistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить Исполнителя" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введите имя исполнителя:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="ArtistNameTextBox" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Введите год начала карьеры:" FontWeight="Bold" Margin="0,10,0,10"/>
            <TextBox x:Name="CareerStartYearTextBox" Width="300" Margin="0,0,0,10"/>

            <Button Content="Добавить" Width="100" Click="OnAddArtistButtonClick" Margin="0,10,0,10"/>
            <Button Content="Отмена" Width="100" Click="OnCancelButtonClick" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
