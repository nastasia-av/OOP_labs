<Window x:Class="LAB_3.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добро пожаловать!" Height="400" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добро пожаловать в систему управления магазинами и продукцией!" 
                       FontSize="20" TextAlignment="Center" Margin="20" TextWrapping="Wrap"/>
            <Button Content="Управление магазинами" 
                    Command="{Binding OpenStoreManagementCommand}" Width="200" Margin="10"/>
            <Button Content="Управление товарами" 
                    Command="{Binding OpenProductManagementCommand}" Width="200" Margin="10"/>
            <Button Content="Управление партиями"
                    Command="{Binding OpenBatchManagementCommand}" Width="200" Margin="10"/>
            <Button Content="Операции" 
                    Command="{Binding OpenOperationsCommand}" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
