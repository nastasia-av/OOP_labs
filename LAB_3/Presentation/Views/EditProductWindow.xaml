<Window x:Class="LAB_3.Client.Views.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_3.Client.Views"
        mc:Ignorable="d"
        Title="Изменить" Height="250" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Описание" Margin="0,0,0,5" />
                <TextBox Width="200" Text="{Binding ProductDescription}" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
            </StackPanel>
            <Button Content="Подтвердить" Command="{Binding ConfirmCommand}" Margin="15"/>
        </StackPanel>
    </Grid>
</Window>
